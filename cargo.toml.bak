[package]
name = "rustblog"
version = "1.1.4"
edition = "2024"

[dependencies]
actix-web = "4.12.1"
actix-files = "0.6.9"
actix-multipart = "0.7.2"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
lazy_static = "1.5"
md-5 = "0.10"
tokio = { version = "1.49", features = ["full"] }
tera = "1.20"
chrono = { version = "0.4", features = ["serde"] }
futures-util = "0.3"

# SQLite 数据库
rusqlite = { version = "0.32", features = ["bundled", "chrono", "serde_json"] }
r2d2 = "0.8"
r2d2_sqlite = "0.25"

# 密码哈希
argon2 = "0.5"
rand = "0.8"

# ECC 加密
p256 = { version = "0.13", features = ["ecdh", "pkcs8"] }
elliptic-curve = { version = "0.13", features = ["ecdh"] }
ecdsa = "0.16"
sha2 = "0.10"
base64 = "0.22"
hex = "0.4"
aes-gcm = "0.10"
spki = "0.7"

# Markdown 解析
pulldown-cmark = "0.12"

# 文件上传
mime_guess = "2.0"

# URL 解码
urlencoding = "2.1"

# 正则表达式
regex = "1.11"

# 异步 trait
async-trait = "0.1"

# 音频元数据提取
id3 = "0.6"
metaflac = "0.2"

# Snowflake ID 生成
snowflake-id-generator = "0.4"

# 命令行参数解析
clap = { version = "4.5", features = ["derive"] }

# 配置文件解析
toml = "0.8"

# GeoIP 数据库查询
maxminddb = "0.27.1"
memmap2 = "0.9"

# 静态变量
once_cell = "1.21"

# 文件嵌入
rust-embed = { version = "8.11", features = ["include-exclude"] }

# JWT 认证
jsonwebtoken = "10.3"

# HTTP 客户端
reqwest = { version = "0.12", features = ["json", "rustls-tls"], default-features = false }

[profile.release]
opt-level = "z"
lto = "fat"
codegen-units = 1
panic = "abort"
strip = true
overflow-checks = false

[profile.release.package."*"]
opt-level = "z"
strip = true
codegen-units = 1

[build]
rustflags = [
    "-C", "link-arg=-s",
    "-C", "target-cpu=native",
    "-C", "embed-bitcode=yes",
    "-Z", "share-generics=y",
    "-Z", "location-detail=none",
]

